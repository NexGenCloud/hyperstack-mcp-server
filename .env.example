# Hyperstack MCP Server Configuration
# Copy this file to .env and update with your actual values and run "make dev"

ENVIRONMENT = "local"

# Required: Hyperstack API Authentication
HYPERSTACK_API_KEY=your_api_key_here

# API Configuration
HYPERSTACK_API_URL=https://infrahub-api.nexgencloud.com/v1

# Server Configuration (for Docker deployment)
# These are used in docker-compose files, not in the application
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
RELOAD=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Connection Pool Configuration
MAX_CONNECTIONS=100
MAX_KEEPALIVE_CONNECTIONS=50
KEEPALIVE_EXPIRY=5

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100

# Python Configuration (for development)
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
