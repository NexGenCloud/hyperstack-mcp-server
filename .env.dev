# Dev Environment Configuration

ENVIRONMENT = "dev"

# Required: Hyperstack API Authentication
HYPERSTACK_API_KEY=your_api_key_here

# API Configuration
HYPERSTACK_API_URL=https://infrahub-api.nexgencloud.com/v1

# Server Configuration (for Docker deployment)
# These are used in docker-compose files
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_KEEPALIVE_EXPIRY=10
SERVER_LIMIT_CONCURRENCY=2000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text

# Connection Pool Configuration
MAX_CONNECTIONS=100
MAX_KEEPALIVE_CONNECTIONS=50
KEEPALIVE_EXPIRY=5

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100

# Python Configuration (for development)
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
PYTHONDEBUG=0
